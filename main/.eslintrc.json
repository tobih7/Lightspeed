{
    "root": true,
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "env": {
        "es6": true
    },
    "ignorePatterns": [],
    "overrides": [
        {
            "files": ["*.ts"],
            "parserOptions": {
                "project": ["tsconfig.json"],
                "createDefaultProgram": true
            },
            "rules": {
                "max-len": "off",
                "@typescript-eslint/no-empty-function": "off",
                "jsdoc/newline-after-description": "off"
            }
        }
    ]
}
